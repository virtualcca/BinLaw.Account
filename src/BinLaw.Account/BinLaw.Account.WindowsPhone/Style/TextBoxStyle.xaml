<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Style TargetType="TextBox" x:Key="BaseTextBoxStyle">
        <Setter Property="Margin" Value="5,5,5,5"></Setter>
    </Style>
    
    <Style TargetType="TextBox" x:Key="MainContentTextBoxStyle" BasedOn="{StaticResource BaseTextBoxStyle}">
        <Setter Property="Margin" Value="5,5,50,5"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    
    <Style TargetType="TextBox" x:Key="InputNoneBorderTextBox" BasedOn="{StaticResource BaseTextBoxStyle}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Margin" Value="5,14,50,0"/>
    </Style>

    
</ResourceDictionary>
